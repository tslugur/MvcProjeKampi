@model EntityLayer.Concrete.Message
@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<br />
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            @Html.Action("_PartialMessageMenu", "WriterPanelMessage")
            <div class="col-md-9">
                @using (Html.BeginForm("NewMessage", "WriterPanelMessage", FormMethod.Post))
                {
                    <!--Mesaj Bölümü-->
                    <div class="card card-primary card-outline">

                        <!--Mesaj Bölümü - Baslik Alani-->
                        <div class="card-header">
                            <h3 class="card-title">Yeni Mesaj Oluştur</h3>
                        </div>

                        <!-- Mesaj Bölümü - Icerik Alani-->
                        <div class="card-body">
                            <div class="form-group">
                                @Html.Label("Alıcı Adı")
                                @Html.TextBoxFor(x => x.ReceiverMail, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ReceiverMail, "", new { @class = "text - danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Konu")
                                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Subject, "", new { @class = "text - danger" })
                            </div>
                            <!-- Icerik Alani - Icerik-->
                            <div class="form-group">
                                @Html.Label("Mesajınız")
                                <textarea id="compose-textarea" name="MessageContent" class="form-control" style="height: 300px">
                               </textarea>
                                @Html.ValidationMessageFor(x => x.MessageContent, "", new { @class = "text - danger" })




                            </div>

                            <!-- Icerik Alani - Dosya Islemleri-->
                            <div class="form-group">
                                <div class="btn btn-default btn-file">
                                    <i class="fas fa-paperclip"></i> Dosya Ekle<input type="file" name="attachment">
                                </div>
                                <p class="help-block">Max. 32MB</p>
                            </div>
                        </div>
                        <!-- Fouter Alanı-->
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="submit" formmethod="post" name="button" value="draft" class="btn btn-outline-secondary"><i class="fas fa-pencil-alt"></i> Taslaklara Kaydet</button>
                                <button type="submit" name="button" value="save" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                            </div>
                            <button type="submit" name="menuName" value="cancel" class="btn btn-danger"><i class="fas fa-times"></i> İptal</button>
                            <button type="button" class="btn btn-warning"><i class="fas fa-print"></i> Yazdır</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- Page Script -->

@model IEnumerable<EntityLayer.Concrete.Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h3>Mvc Kamp Tablo Örneği-Kategori</h3>
        <br />
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Kategori Adı</th>
                <th>Açıklama</th>
                <th>Durum</th>
                <th>Güncelle</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryDescription</td>
                    <td>@item.CategoryStatus</td>
                    <td><a href="" class="btn btn-warning">Güncelle</a></td>


                </tr>
            }
        </table>
        <a href="/Category/AddCategory/" class="btn btn-primary">Kategori Ekle</a>
        <button class="btn btn-info">Kategori Listesi</button>
        <button class="btn btn-danger">Kategori Açıklamaları</button>
    </div>
</body>
</html>
